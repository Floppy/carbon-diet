<div class='friend<%= " smalltext" if small %>'>
<%= render :partial => "/shared/user_image_link", :locals => { :user => user, :small => small } %>
<%= render :partial => "/shared/user_link", :locals => { :user => user } %>
<% unless small %>
	<%= link_to image_tag_with_tooltip('delete.png'), {:controller => 'friends', :action => 'remove', :id => user.id}, :confirm => 'Are you sure you want to remove this person from your friends list?' %>
<% end %>
</div>
