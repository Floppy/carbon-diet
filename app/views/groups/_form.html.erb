<%= form_for @group do |f| %>
  <%= f.error_messages %>
  <table class="form">
    <tr>
      <td><%= f.label :name %></td>
      <td><%= f.text_field :name %></td>
    </tr>
    <tr>
      <td><%= f.label :description %></td>
      <td><%= f.text_area :description, :rows => 5 %></td>
    </tr>
    <tr>
      <td><%= f.label :private, "Private (invitation only)"%></td>
      <td>
        <%= f.check_box :private %>
        <%= help("If you check this box, users will only be able to join if invited.") %>
      </td>
    </tr>
    <tr>
      <td></td>
      <td>
        Please confirm that you are a real person by retyping the two words in the box below. This helps us stop spam.<br/>
        <%= recaptcha_tags(:ssl => true) %>
      </td>
    </tr>
  </table>
<% end %>
