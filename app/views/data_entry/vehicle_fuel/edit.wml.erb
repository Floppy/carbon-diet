<h1>New Vehicle Fuel Purchase</h1>

<%= error_messages_for 'vehicle_fuel_purchase' %>

<!--[form:vehicle_fuel_purchase]-->
<p>
  <label for="vehicle_fuel_purchase_amount">Amount (<%=h @vehicle.vehicle_fuel_unit.abbreviation %>)</label><br/>
  <%= text_field 'vehicle_fuel_purchase', 'amount', :style => '-wap-input-format: "*n"'  %>
</p>
<p>
  <label for="vehicle_fuel_purchase_purchased_on">Date</label><br/>
  <%= date_select 'vehicle_fuel_purchase', 'purchased_on', :order => [:day, :month, :year]  %>
</p>
<p>
  <label for="vehicle_fuel_purchase_vehicle_fuel_type">Type</label><br/>
  <%= collection_select :vehicle_fuel_purchase, :vehicle_fuel_type_id, @vehicle_fuel_types, :id, :name %>
</p>
<p>
  <label for="vehicle_fuel_purchase_distance">Odometer Reading (<%=h @vehicle.vehicle_distance_unit.abbreviation %>)<em>(optional)</em></label><br/>
  <%= text_field 'vehicle_fuel_purchase', 'distance', :style => '-wap-input-format: "*n"' %>
</p>
<!--[eoform:vehicle_fuel_purchase]-->

<anchor>
  <go method="post" href="/data_entry/vehicle_fuel/<%= @vehicle.id %>/edit">
    <postfield name="vehicle_fuel_purchase[amount]" value="$(vehicle_fuel_purchase[amount])"/>
    <postfield name="vehicle_fuel_purchase[purchased_on(1i)]" value="$(vehicle_fuel_purchase[purchased_on(1i)])"/>
    <postfield name="vehicle_fuel_purchase[purchased_on(2i)]" value="$(vehicle_fuel_purchase[purchased_on(2i)])"/>
    <postfield name="vehicle_fuel_purchase[purchased_on(3i)]" value="$(vehicle_fuel_purchase[purchased_on(3i)])"/>
    <postfield name="vehicle_fuel_purchase[vehicle_fuel_type_id]" value="$(vehicle_fuel_purchase[vehicle_fuel_type_id])"/>
    <postfield name="vehicle_fuel_purchase[distance]" value="$(vehicle_fuel_purchase[distance])"/>
  </go>
  Save
</anchor>

<%= link_to 'Back', :controller => '/profile' %>
