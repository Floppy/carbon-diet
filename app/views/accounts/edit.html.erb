<% content_for('optionbar') do %>

  <% @current_user.electricity_accounts.each do |account| %>
  <div class="option">
  <%= image_tag account.image %>
  <%= link_to h(account.name), edit_user_electricity_account_path(@current_user, account) %>
  </div>
  <% end %>

  <% @current_user.gas_accounts.each do |account| %>
  <div class="option">
  <%= image_tag account.image %>
  <%= link_to h(account.name), edit_user_gas_account_path(@current_user, account) %>
  </div>
  <% end %>

  <% @current_user.vehicles.each do |vehicle| %>
    <div class="option">
      <%= image_tag vehicle.image %>
      <%= link_to h(vehicle.name), edit_user_vehicle_path(@current_user, vehicle) %>
    </div>
  <% end %>

  <%= option "home" %>
<% end %>

<div class="pagecontent">
Which account would you like to edit?
</div>
