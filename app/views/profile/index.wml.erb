<p>
  <big>The Carbon Diet</big>
</p>
<p>
<% if @current_user.has_no_accounts %>
  <em>You don't have any account data to edit!</em><br/>
<% else %>
  Add data to:<br/>
  <% @current_user.electricity_accounts.current.each do |account| %>
    <%=image_tag 'electricity.png'%> <%= link_to(account.name, new_user_electricity_account_reading_path(@current_user, account)) %><br/>
  <% end %>
  <% @current_user.gas_accounts.current.each do |account| %>
    <%=image_tag 'gas.png'%> <%= link_to(account.name, new_user_gas_account_reading_path(@current_user, account)) %><br/>
  <% end %>
  <% @current_user.vehicles.current.each do |vehicle| %>
    <%=image_tag 'car.png'%> <%= link_to(vehicle.name, new_user_vehicle_vehicle_fuel_purchase_path(@current_user, vehicle)) %><br/>
  <% end %>
<% end %>
</p>
<p>
  <%=image_tag 'help.png'%> <%= link_to "Help", "/help" %><br/>
  <%=image_tag 'delete.png'%> <%= link_to 'Log Out', :controller => "/user", :action => "logout" %>
</p>
