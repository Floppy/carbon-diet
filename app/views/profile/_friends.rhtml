<% if @profile == @current_user %>

<div class="sectiontitle"><%= link_to "Friends", user_friends_path(@profile) %></div>
<div>
<% unless @profile.unapproved_befriendships.empty? %>
  <%= image_tag 'warning.png' %>
  <%= link_to 'You have received ' + pluralize(@profile.unapproved_befriendships.size, "friend request") + '.', user_friends_path(@profile) %><br/>
<% end %>
<% if @profile.friends.empty? %>
  You have not added any friends! Why not <%= link_to 'find some', :controller => "search" %>?
<% else %>
  <% @profile.friends.each do |friend| %>
  <%= friend_link(friend, true) %>
  <% end %>
  <div class="clear"></div>
<% end %>
</div>

<% else %>

<% unless @profile.friends.empty? %>
<div class="sectiontitle">Friends</div>
<div>
<% @profile.friends.each do |friend| %>
<%= friend_link(friend, true) %>
<% end %>
<div class="clear"></div>
</div>
<% end %>

<% end %>
