<h1>The Carbon Diet</h1>
<br/>
<h2>Sign In</h2>

<% if flash[:notice] %>
<p class="flash"><%=h flash[:notice] %></p>
<% end %>

<p>
Username:<br/>
<%= text_field 'user', 'login'  %>
</p>
<p>
Password:<br/>
<%= password_field 'user', 'password' %>
</p>
<p>
Remember me <%= check_box 'user', 'remember' %>
</p>
<p>
  <anchor>
    <go method="post" href="/user/auth">
      <postfield name="user[login]" value="$(user[login])"/>
      <postfield name="user[password]" value="$(user[password])"/>
      <postfield name="user[remember]" value="$(user[remember])"/>
    </go>
    Log in
  </anchor>
</p>